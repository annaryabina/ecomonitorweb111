{
  "manifest_version": 3,
  "name": "Эко-монитор Россия",
  "version": "1.0",
  "description": "Анализ экологической ситуации в Липецке, Москве и Санкт-Петербурге",
  "author": "Тарасов, Рябинина, Косарева",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Эко-монитор Россия"
  },
  "permissions": [
    "alarms",
    "notifications",
    "storage",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.accuweather.com/*",
        "https://www.iqair.com/*",
        "https://aqicn.org/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options/options.html",
  "host_permissions": [
    "https://www.accuweather.com/*",
    "https://www.iqair.com/*",
    "https://aqicn.org/*",
    "https://www.accuweather.com/ru/ru/*"
  ],
 
  "externally_connectable": {
    "matches": [
      "http://localhost:*/*",
      "https://annaryabina.github.io/ecomonitorweb11/",
      "https://eco-monitor-app.netlify.app/*",
      "https://eco-monitor-app.vercel.app/*"
      
    ]
  },
  "web_accessible_resources": [
    {
      "resources": ["data/*", "icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}